<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% for(var i = 0; i < acoes.length; i++){%>

			<% 
				var txt_acao = '';
				switch( parseInt(acoes[i].acao)){
					case 1: 
						txt_acao = 'Coletar recursos (2G e 1H)';
						break;

					case 2: 
						txt_acao = 'Enforcar aldeão (3G e 2H)';
						break;

					case 3: 
						txt_acao = 'Ensinar história (1G e 5H)';
						break;

					case 4: 
						txt_acao = 'Ensinar magia (1G e 5H)';
						break;
				}

				var date = new Date();
			var momento_atual = date.getTime();
			var segundos_restantes = Math.round(( acoes[i].acao_termina_em - momento_atual) / 1000);
			%>

			<li><%= acoes[i].quantidade %> - <%= txt_acao %>
				<small > restam  <span class="tempo_restante"><%= segundos_restantes %></span> - <a href="#">revogar ordem</a></small>
			</li>
		<% } %>
		

	</ul>
</div>